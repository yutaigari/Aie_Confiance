<!--commentのパーシャル-->
<div class="comment_item clearfix" id="comment-<%= post_comment.id%>">
  <div class="comment_avatar">
    <%= link_to user_path(post_comment.user.id) do %>
      <%= image_tag (post_image.user.img_name.url(:thumb) ), class: "image_round" %>
    <% end %>
  </div>
  <div class="comment_info">
    <ul class="comment_info_left">
      <li class="comment_content">
        <%= simple_format(post_comment.comment) %>
      </li>
      <li class="comment_date">
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
        <% if post_comment.user == current_user %>
          <%= link_to "削除", post_image_post_comments_path(post_comment.post_image_id), method: :delete %>
        <% end %>
      </li>
    </ui>
  </div>
</div>

  
    
    
