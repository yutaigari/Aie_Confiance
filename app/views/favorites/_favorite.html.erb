<% if post_image.favorited_by?(current_user) %>
  <%= link_to post_image_favorites_path(post_image_id: post_image.id), method: :delete do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;">
      <%= post_image.favorites.count %>いいね
    </i>
  <% end %>
<% else %>
  <%= link_to post_image_favorites_path(post_image_id: post_image.id), method: :post do %>
    <i class="fa fa-heart-o" aria-hidden="true">
      <%= post_image.favorites.count %>いいね
    </i>
  <% end %>
<% end %>