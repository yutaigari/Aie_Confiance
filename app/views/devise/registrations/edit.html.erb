<div class="userEditpage">
  <div class="container">
    <div class="row">
      <h3 class="userEditpage_headline">アカウント編集</h3>
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(current_user, url: registration_path(current_user)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label "名前" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "自己紹介" %>
            <%= f.text_area :self_introduction, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "男" %>
            <%= f.radio_button :sex, :男 %>
            <%= f.label "女" %>
            <%= f.radio_button :sex, :女 %>
          </div>
          <div class="form-group">
            <%= f.file_field :img_name %>
          </div>
          
          <div class="form-group">
            <%= f.label "更新するにはパスワードを入力してください" %>
            <%= f.password_field :current_password, class: "form-control"%>
          </div>
          <div class="text-center">
            <%= f.submit "更新", class: "btn submitBtn" %>
          </div>
        <% end %>
        <%= link_to "戻る", user_path(current_user.id) %>
      </div>
    </div>
  </div> 
</div>