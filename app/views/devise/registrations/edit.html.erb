<div class="userEditPage">
  <header class="header">
    <h3>アカウント編集</h3>
  </header>
  <div class="container">
    <%= form_for(current_user, url: registration_path(current_user)) do |f| %>
      <%= devise_error_messages! %>
      <label for="file_photo" class="rounded-circle userProfileImg col-md-8 col-md-offset-2">
        <div class="userProfileImg_description">画像をアップロード</div>
        <i class="fas fa-camera fa-3x"></i>
        <%= f.file_field :img_name, id: "file_photo" %>
      </label>
      <div class="form-group col-md-8 col-md-offset-2">
        <%= f.label "名前" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-md-8 col-md-offset-2">
        <%= f.label "自己紹介" %>
        <%= f.text_area :self_introduction, maxlength: "500", rows: "10", class:"form-control" %>
      </div>
      <div class="radio_button col-md-8 col-md-offset-2">
        <div><label>性別</label></div>
        <%= f.label "男" %>
        <%= f.radio_button :sex, "男", class: "form-check-input", id: "inlineRadio1" %>
        <%= f.label "女" %>
        <%= f.radio_button :sex, "女", class: "form-check-input", id: "inlineRadio2" %>
      </div>
      <div class="form-group col-md-8 col-md-offset-2">
        <%= f.label "更新するにはパスワードを入力してください" %>
        <%= f.password_field :current_password, class: "form-control", placeholder:"パスワードを入力してください", autocomplete: "off" %>
      </div>
      <div class="text-center col-md-8 col-md-offset-2">
        <%= f.submit "Update", class: "updateBtn btn-primary" %>
      </div>
    <% end %>
    <div class="col-md-8 col-md-offset-2">
      <%= link_to "戻る", user_path(current_user) %>
    </div>
  </div> 
</div>