<div class='UserShow'>
  <div class='container'>
    <div class="row">
      <div class="col-md-4">
        <div class='userInfo'>
          <div class='userInfo_img'>
            <%= image_tag @user.img_name.url %>
          </div>
          <div class='userInfo_name'>名前 <%= @user.name%></div>
          <div class='userInfo_selfIntroduction'>紹介 <%= @user.self_introduction %></div>
          <div class="userInfo_follow">
            <%= render 'follow_form' %>
            <%= render 'stats' %>
          </div>
        </div>
        <% if current_user.id == @user.id %>
          <div class='userAction'>
            <div class="userAction_edit userAction_common">
              <%= link_to(content_tag(:i, "", class: 'fas fa-edit fa-2x'), edit_user_registration_path) %>
              <span>アカウント編集</span>
            </div>
            <div class="userAction_post userAction_common">
              <%= link_to(content_tag(:i, "", class: 'fas fa-paint-brush fa-2x'), new_post_image_path) %>
              <span>投稿</span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="userPost">
          <% if @user.post_images.any? %>
          <h3>Post (<%= @user.post_images.count %>)</h3>
          <ol class="usePost_images">
            <%= render @post_images %>
          </ol>
          <%= will_paginate @post_images, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>